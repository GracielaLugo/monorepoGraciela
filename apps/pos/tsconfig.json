{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@repo/database": [
        "../../packages/database/src"
      ],
      "@repo/service-menu": [
        "../../packages/service-menu/src"
      ],
      "@repo/service-sales": [
        "../../packages/service-sales/src"
      ],
      "@repo/service-inventory": [
        "../../packages/service-inventory/src"
      ],
      "@repo/service-suppliers": [
        "../../packages/service-suppliers/src"
      ],
      "@repo/service-payroll": [
        "../../packages/service-payroll/src"
      ],
      "@repo/service-credit": [
        "../../packages/service-credit/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}